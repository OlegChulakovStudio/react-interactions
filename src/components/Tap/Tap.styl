@import "~node-waves/src/stylus/waves.styl";

.Tap {
	$fadeOpacity = 0.1;
	&:after {
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		opacity 0
		background alpha(#000, $fadeOpacity)
		transition opacity 0.35s
		content ''
	}
	&_light:after {
		background alpha(#FFF, $fadeOpacity)
	}
	&_fade:after {
		opacity 1
	}
}

// overwrite node waves styles
.waves-effect {
	$step = 0.07
	.waves-ripple {
		gradient = rgba(0, 0, 0, $step) 0, rgba(0, 0, 0, $step*2) 40%, rgba(0, 0, 0, $step*3) 50%, rgba(0, 0, 0, $step*4) 60%, rgba(255, 255, 255, 0) 61%
		background radial-gradient(gradient)
	}
	&.waves-light .waves-ripple {
		gradient = rgba(255, 255, 255, $step) 0, rgba(255, 255, 255, $step*2) 40%, rgba(255, 255, 255, $step*3) 50%, rgba(255, 255, 255, $step*4) 60%, rgba(255, 255, 255, 0) 61%
		background radial-gradient(gradient)
	}
}